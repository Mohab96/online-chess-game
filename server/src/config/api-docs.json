          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckEmail"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Code resent successfully"
          }
        }
      }
    },
    "/auth/reset-password": {
      "post": {
        "summary": "Reset Password",
        "tags": ["Auth"],
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResetPassword"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset successfully"
          }
        }
      }
    },
    "/auth/verify-email": {
      "post": {
        "summary": "Verify Email",
        "tags": ["Auth"],
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VerifyEmail"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email verified successfully"
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Get Current Player",
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "Current player data"
          }
        }
      }
    },
    "/chats/get": {
      "get": {
        "summary": "Get Chat",
        "tags": ["Chats"],
        "parameters": [
          {
            "in": "query",
            "name": "chatId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the chat to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Chat data"
          }
        }
      }
    },
    "/chats/send": {
      "post": {
        "summary": "Send Message",
        "tags": ["Chats"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendMessage"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message sent successfully"
          }
        }
      }
    },
    "/friends": {
      "post": {
        "summary": "Send Friend Request",
        "tags": ["Friends"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendFriendRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Friend request sent successfully"
          }
        }
      },
      "get": {
        "summary": "List Friend Requests",
        "tags": ["Friends"],
        "responses": {
          "200": {
            "description": "List of friend requests"
          }
        }
      }
    },
    "/friends/{id}": {
      "patch": {
        "summary": "Accept or Decline Friend Request",
        "tags": ["Friends"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the friend request"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AcceptOrDeclineFriendRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Friend request processed successfully"
          }
        }
      }
    },
    "/games/join": {
      "post": {
        "summary": "Join Game",
        "tags": ["Game"],
        "responses": {
          "200": {
            "description": "Joined game successfully"
          }
        }
      }
    },
    "/games/{gameId}/move": {
      "post": {
        "summary": "Make Move",
        "tags": ["Game"],
        "parameters": [
          {
            "in": "path",
            "name": "gameId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the game"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MakeMove"
              }
            }
          }
