              "schema": {
                "$ref": "#/components/schemas/CheckEmail"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Forgot password request processed"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login",
        "tags": ["Auth"],
        "security": [],
